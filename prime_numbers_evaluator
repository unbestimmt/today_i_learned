while True:
    x = int(input("Type a number: "))
    i = 2
    while i < x:
        r=x%i
        if r==0:
            print("{} is not a prime number".format (x))
            break
        i+=1
    else:
        print("{} is a prime number".format (x))
    stop = input("Wanna try another number? (y/n) ")
    if stop=="n" or stop=="N":
        break
